<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReceitasDaHora.AboutPage"
             Title="Sobre">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource innerContent}">
            <Label Text="O que fazemos?" Style="{StaticResource titulo}" />
            <Label Text="O aplicativo possui uma base de dados repleta de receitas de doces, salgados, massas e muito mais. Todas as informações fornecidas são de uso público e possuem referências."
                   Style="{StaticResource paragrafo}" />

            <Label Text="Dúvidas ou Sugestões?" Style="{StaticResource titulo}" />
            <Label Style="{StaticResource paragrafo}" Text='Caso possua dúvidas ou sugestões, favor enviar para "matheus91@outlook.com"' />

            <Label Text="Versão da Aplicação" Style="{StaticResource titulo}" />
            <Label Text="{Binding Versao}" Style="{StaticResource paragrafo}" />

            <Label Text="Desenvolvido Por" Style="{StaticResource titulo}" />
            <Label Text="Matheus Marques" Style="{StaticResource paragrafo}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>